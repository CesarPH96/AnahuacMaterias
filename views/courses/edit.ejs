<% include ../partials/header.ejs %>
 <title>Anahuac Materias: Editar <%= course.name %></title>
 <link rel="stylesheet" href="/courses.css">
<% include ../partials/middle.ejs %>

<div class="container container-top">
  <h4>Editar  <%= course.name %></h4>
  <div class="form-group">
    <div class="input-group">
      <input type="text" class="form-control" id="nameMetric" placeholder="Exámen 1">
      <span class="input-group-btn">
        <button class="btn btn-warning" onclick="addMetric()" type="button">Añadir</button>
      </span>
    </div>
  </div>
</div>
<div class="container container-course">
  <form id="metricForm" action="/<%= course._id %>?_method=PUT" method="POST">
      <div class="course-title">
        <span><input type="text" id="courseTitle" name="course[title]" value="<%= course.name %>"/></span>
        <span class="course-credit">(<input type="text" id="courseCredit" name="course[credits]" value="<%= course.credits %>"/>créditos)</span>
      </div>
      <table class="table table-striped table-bordered table-responsive">
        <thead>
          <tr>
            <th>Atributo</th>
            <th>%</th>
            <th>Calificación</th>
          </tr>
        </thead>
        <tbody>
            <% course.metrics.forEach(function(metric){ %>
              <tr class="metric">
                <td><input type="text" name="metrics[name]" value="<%= metric.name %>"/></td>
                <td><input type="Number" name="metrics[porcentage]" value="<%= metric.porcentage %>" step="1"/></td>
                <td class="metric-grade"><input type="Number" value="<%=metric.grade%>" name="metrics[grade]" step="0.1"/></td>
              </tr>
            <% }); %>
            <tr class="final-grade">
              <td> Calificación Final </td>
              <td class="total-procentage"></td>
              <td class="final-grade-grade"></td>
            </tr>
        </tbody>
      </table>
  <button class="btn btn-sm btn-success">Guardar cambios</button>
  </form>
  <button class="btn btn-sm btn-danger" onclick="deleteLastMetric()">Borrar ultimo criterio</button>
</div>

<% include ../partials/footer.ejs %>
